@model Ogrenci

    <h2>Öğrenci Güncelleme</h2>
    <hr>
    <form asp-controller="Ogrenci" asp-action="Edit" method="post">
        
        <input type="hidden" asp-for="KimlikNo">

        <div class="md-3">
            <label asp-for="OgrenciAdi" class="form-label">Öğrenci Adı</label>
            <input asp-for="OgrenciAdi" class="form-control">
        </div>
        <div class="md-3">
            <label asp-for="OgrenciSoyadi" class="form-label">Öğrenci Soyadı</label>
            <input asp-for="OgrenciSoyadi" class="form-control">
        </div>
        <div class="md-3">
            <label asp-for="Eposta" class="form-label">Eposta</label>
            <input asp-for="Eposta" class="form-control">
        </div>
        <div class="md-3">
            <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
            <input asp-for="Telefon" class="form-control">
        </div>
        </br>
        <button type="submit" class="btn btn-secondary">Kaydet</button>
    </form>

